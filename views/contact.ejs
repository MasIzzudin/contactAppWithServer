<div class="container mt-2">
  <div class="row">
    <div class="col-md-8">
      <h2>Daftar Kontak</h2>
      <a class="btn btn-primary mb-3 mt-2" href="/contact/add" role="button"
        >Tambah Kontak</a
      >
      <% if (messages != "") { %>
      <div class="alert alert-success" role="alert"><%= messages %></div>
      <% } %>
      <table class="table">
        <thead>
          <tr>
            <th scope="col">No</th>
            <th scope="col">Nama</th>
            <th scope="col">Aksi</th>
          </tr>
        </thead>
        <tbody>
          <% if (contacts.length > 0) { %> <% contacts.forEach((data, index) =>
          { index++ %>
          <tr>
            <th scope="row"><%= index++ %></th>
            <td><%= data.nama %></td>
            <td>
              <a href="/contact/<%= data.id %>">
                <i class="btn btn-info badge">lihat detail &raquo;</i>
              </a>
            </td>
          </tr>
          <% }) %> <% } else { %>
          <tr>
            <td colspan="3">
              <div class="alert alert-warning" role="alert">
                Data kontak masih kosong!
              </div>
            </td>
          </tr>
          <% } %>
        </tbody>
      </table>
    </div>
  </div>
</div>
